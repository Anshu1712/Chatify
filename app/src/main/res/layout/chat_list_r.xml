<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:gravity="end"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">

    <!-- Optional Profile Image/Icon -->

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/chat_right">

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:importantForAccessibility="yes"
            android:maxWidth="@dimen/_250sdp"
            android:maxHeight="@dimen/_30sdp"
            android:maxLines="5"
            android:padding="@dimen/_5sdp"
            android:text="@string/this_is_text_message"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="@string/_12_34_pm"
            android:textColor="@color/md_theme_outline"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

</LinearLayout>
