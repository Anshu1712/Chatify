<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">

    <!-- Bubble Container -->
    <LinearLayout
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/whatsapp_chat_bubble_left"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <!-- Image -->
        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/about" />

        <!-- Caption -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp">

            <!-- Caption Text -->
            <TextView
                android:id="@+id/chat_img_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:maxWidth="@dimen/_250sdp"
                android:maxHeight="@dimen/_30sdp"
                android:maxLines="5"
                android:padding="@dimen/_5sdp"
                android:ellipsize="end"
                android:text="@string/this_is_text"
                android:textColor="#000000"
                android:textSize="17sp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/chat_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="12:34 PM"
                android:textColor="@color/md_theme_outline"
                android:textSize="9sp"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
